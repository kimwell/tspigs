
.view{
    padding: 0 30rpx;
}
page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background-color: #fff;
}
.container {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.search-icon{
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 10rpx;
}
.showLoading{
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    background: rgba(0, 0, 0, .5);
    color: #fff;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
    z-index: 999;
}
.listIcon{
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 10rpx; 
}
.loading-view{
    text-align: center;
    font-size: 32rpx;
    color: #86af49
}
.loading{
    width: 20px;
    height: 20px;
    vertical-align: middle;
}